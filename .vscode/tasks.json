{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang build active file",
			"command": "/usr/bin/clang",
			"args": [
				"*.c",
				"-O3",
				"-fuse-ld=lld",
				"-flto=thin",
				"-Wl,-O3,--lto-O3",
				"-Wall",
				"-lcurl",
				"-ljson-c",
				"-lpthread",
				"-D_GNU_SOURCE",
				"-o",
				"nicholas"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang"
		}
	]
}
